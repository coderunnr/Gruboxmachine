<!--Outer Container-->
<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1ADAEA"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- All content inside-->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/rootview"
        android:background="@drawable/tag_background"
        android:layout_margin="35px"
        tools:context="com.example.android.grubox_ui.MainActivity">

        <!--For Container 1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/top_rounded"
            android:orientation="vertical">

            <!--Container 1, item 1-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:fontFamily="assets/fonts/Quicksand-Regular.otf"
                        android:text="GRUBOX"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="12:30 PM"
                        android:fontFamily="assets/fonts/Quicksand-Regular.otf"
                        android:textStyle="bold"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="your smart cafe"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="12 Maarch 2017, Monday"/>

                </RelativeLayout>

            </LinearLayout>

            <!-- Container 1, item 2-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Weather and news updates go here"/>

        </LinearLayout>

        <!-- For Container 2-->
        <!--Horizontally scrolling ListView-->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:id="@+id/fragment_container_top">
            </LinearLayout>

        </HorizontalScrollView>

        <!-- For Container 3-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            <!-- Ad image -->
            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/fragment_container_left"
            android:layout_width="200dp"
            android:layout_height="650dp"
            android:layout_weight="5.5"
            android:layout_margin="20dp"
            />

        <!-- vertically scrolling-->
            <!--<GridView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="200dp"-->
                <!--android:background="@drawable/back_shadow"-->
                <!--android:id="@+id/fragment_container_upper"-->
                <!--android:columnWidth="100dp"-->
                <!--android:numColumns="2"-->
                <!--android:verticalSpacing="5dp"-->
                <!--android:horizontalSpacing="5dp"-->
                <!--android:stretchMode="columnWidth"-->
                <!--android:scrollbars="horizontal"-->
                <!--android:gravity="center">-->
            <!--</GridView>-->

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/fragment_container_upper"
            android:layout_width="600dp"
            android:layout_height="650dp"
            android:layout_weight="5.5"
            android:layout_margin="20dp"
            />

        </LinearLayout>

        <!-- For Container 4-->

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_container_lower"
        android:layout_width="match_parent"
        android:background="@drawable/lower_corners"
        android:layout_height="0dp"
        android:layout_weight="2.5"/>
            <!--tools:layout="@layout/cart_view" />-->

        <RelativeLayout
            android:background="@drawable/bottom_rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:background="#FFD75C"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:text="Cancel"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="500dp"
                android:text="Proceed to pay"
                android:textColor="#000000"
                android:background="#FFD75C"
                android:layout_alignParentTop="true"
                style="?android:attr/borderlessButtonStyle"/>

        </RelativeLayout>

        <!--Adding a fragment instead of this-->
        <!-- For Container 5-->
    </LinearLayout>

    <!--To position it over the two layouts-->
    <RelativeLayout
        android:layout_width="600dp"
        android:background="@drawable/total_amount_text"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="850dp"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical|left"
            android:textSize="30dp"
            android:text="Your Cart"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textSize="30dp"
            android:gravity="center_vertical|right"
            android:text="Total Rs 0"
            android:id="@+id/cart_amount"/>

    </RelativeLayout>

</FrameLayout>

