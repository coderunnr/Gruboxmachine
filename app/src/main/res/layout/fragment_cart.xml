<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:background="@color/colorPrimary"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Cart"
            android:textSize="20sp"
            android:paddingLeft="7dp"
            android:textColor="@color/colorPrimaryDarker"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/total_amount_cart"
            android:text="Total: Rs 40"
            android:textSize="20sp"
            android:paddingRight="7dp"
            android:textColor="@color/colorPrimaryDarker"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>
    
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryLight"
        android:id="@+id/cart_list"
        >

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="4dp"
        android:gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:layout_weight="1"
            android:id="@+id/cart_cancel"
            android:layout_gravity="center_horizontal"
            android:text="Cancel"
            android:minWidth="0dp"
            android:textSize="14sp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"

            android:textColor="@color/colorPrimaryDarker"
            android:background="@drawable/button_add_to_cart"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:layout_weight="1"
            android:id="@+id/cart_pay_with_paytm"
            android:layout_gravity="center_horizontal"
            android:text="Pay with Wallet"
            android:minWidth="0dp"
            android:textSize="14sp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/colorPrimaryDarker"
            android:background="@drawable/button_add_to_cart"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:id="@+id/cart_pay_with_grucard"
            android:layout_gravity="center_horizontal"
            android:text="Pay with Grucard"
            android:minWidth="0dp"
            android:textSize="14sp"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/colorPrimaryDarker"
            android:background="@drawable/button_add_to_cart"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:id="@+id/cart_pay_with_cash"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:text="Pay with Cash"
            android:minWidth="0dp"
            android:textSize="14sp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="4dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/colorPrimaryDarker"
            android:background="@drawable/button_add_to_cart"
            />

    </LinearLayout>

</LinearLayout>